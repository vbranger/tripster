<div class="news_card m-0 p-0 width-fit-content">
    <div class="news_card__info">
      <div class="news_card__text">
        <div class="d-flex justify-content-between">
          <p><small class="mr-3">
            <%= user == current_user ? "Votre avis" : "#{user.first_name}"%> </small></p>
          <p>
            <small>
              <% review.score.to_i.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5 - review.score.to_i).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </small>
          </p>
        </div>
        
        <p class="d-none d-sm-block"><%= review.content %></p>
      </div>
    </div>
</div>