<div class="background-rounded-white-no-tab-no-part px-4 py-3">
   <legend class="trip_question"><strong>Quand pars-tu ?</strong></legend>
  <div class="row justify-content-center align-items-center">
    <div class="col-sm-6 d-none d-sm-block">
      <%= image_tag 'undraw_time.svg', class:"img-fluid", style:"max-height: 60vh;" %>
    </div>
    <div class="col-12 col-sm-6 d-flex justify-content-center">
      <%= simple_form_for @trip, method: :put, url: wizard_path, html: {class:"trip_form"} do |f| %>
        <% if f.object.errors.any? %>
          <div class="error_messages">
            <% f.object.errors.full_messages.each do |error| %>
              <p><%= error %></p>
            <% end %>
          </div>
        <% end %>

        <fieldset data-controller="calendar">
         

          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
            <label class="form-check-label" for="exampleRadios1">
              Dates
            </label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
            <label class="form-check-label" for="exampleRadios2">
              Scope
            </label>
          </div>
          <div>
          
            <%= f.input :start_date, as: :hidden, required: false, input_html: {class: "datepicker", id: "range_start", data: {calendar_target: 'range', action: 'input->calendar#refresh'}} %>
          </div>

          <div>
            <%= f.input :end_date, as: :hidden, required: false, input_html: {class: "datepicker", id: "range_end"} %>
          </div>
          
          <div class="text-center">
            <p data-calendar-target="display"></p>
            <%= link_to "Annuler sÃ©lection", "#", class: "d-none", data: {calendar_target: "reset"}  %>
          </div>
            
          

          <div class="d-flex justify-content-around mt-3">
            <form>
              <input class="btn btn-outline-primary" type="button" value="Retour" onclick="history.back()">
            </form>
            <%= button_tag type: 'submit', class: "btn btn-primary" do %>
              <p>Suite
              <i class="fas fa-long-arrow-alt-right ml-1"></i></p>
            <% end %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>