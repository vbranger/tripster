<div class="background-rounded-white-no-tab d-flex p-3 justify-content-center align-items-center">
      <div class="text-center">
        <p class="my-3">Importer vos logements depuis les principaux sites de location</p>
        <div class="row justify-content-center my-3">
          <%= image_tag "logo-airbnb.png", class:"mb-3 col-8 col-sm-3 col-md-2" %>
          <%= image_tag "logo abritel.svg", class:"mb-3 col-8 col-sm-3 col-md-2" %>
          <%= image_tag "logo_coinsecret.png", class:"mb-3 col-8 col-sm-3 col-md-2" %>
        </div>
        <div class="row justify-content-center">
          <div class="col-8">
            <%= simple_form_for [@trip,@room], :html=> { class: 'room_url_form text-center' } do |f| %>
                <%= f.input :url, placeholder: "Coller url ici", label: false, :class=>"text-center" %>
                <%= f.submit "Importer", :class=>"btn btn-primary mt-3" %>
            <% end %>
          </div>
        </div>
      </div>
</div>