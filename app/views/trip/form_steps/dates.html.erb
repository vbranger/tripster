<div class="background-rounded-white-no-tab-no-part px-4 py-3">
<%= simple_form_for @trip, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend class="trip_question"><strong>Quand pars-tu ?</strong></legend>

    <div>
      <%= f.input :start_date, as: :hidden, required: false, input_html: {class: "datepicker", id: "range_start"} %>
    </div>

    <div>
      <%= f.input :end_date, as: :hidden, required: false, input_html: {class: "datepicker", id: "range_end"} %>
    </div>

    <div class="d-flex justify-content-center">
      <%= button_tag type: 'submit', class: "btn btn-primary", id: "trip_form_next" do %>
        <p>Suite
        <i class="fas fa-long-arrow-alt-right ml-1"></i></p>
      <% end %>
    </div>
  </fieldset>
<% end %>
</div>