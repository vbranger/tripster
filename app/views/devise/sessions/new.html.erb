<div class="background-rounded-white-no-tab-no-part px-4 py-3">
  <div class="row justify-content-around align-items-center">
    <div class="col-12 col-sm-4 col-lg-3">
      <h2 class="my-3"><strong>Se connecter</strong></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="form_group">
            <%= f.label "email" %>
            <%= f.text_field :email,
                        required: false,
                        autofocus: true,
                        pattern:".+",
                        input_html: { autocomplete: "email" } %>
          </div>
          <div class="form_group">
            <%= f.label "mot de passe" %>
            <%= f.password_field :password,
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <%#= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions my-3">
          <%#= f.button :submit, "Se connecter", class: "btn btn-block btn-primary" %>
          <%= button_tag "Se connecter", type: 'submit', class: "btn btn-block btn-primary" %>
        </div>
      <% end %>

      <small><%= render "devise/shared/links" %></small>
    
    </div>
    <div class="d-none col-sm-4 col-md-5 col-lg-4 d-sm-block">
      <%= image_tag 'undraw_traveling.svg', class:"img-fluid" %>
    </div>
  </div>
</div>
